<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".Activities.Game4Activity">

    <TextView
        android:id="@+id/timerTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vreme: 5s"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/term1TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojam 1"
        android:textSize="18sp"
        android:layout_below="@id/timerTextView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/term2TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojam 2"
        android:textSize="18sp"
        android:layout_below="@id/term1TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/term3TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojam 3"
        android:textSize="18sp"
        android:layout_below="@id/term2TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/term4TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojam 4"
        android:textSize="18sp"
        android:layout_below="@id/term3TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/term5TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojam 5"
        android:textSize="18sp"
        android:layout_below="@id/term4TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/term6TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojam 6"
        android:textSize="18sp"
        android:layout_below="@id/term5TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/term7TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pojam 7"
        android:textSize="18sp"
        android:layout_below="@id/term6TextView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/guessEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Unesite pojam"
        android:layout_below="@id/term7TextView"
        android:layout_marginTop="16dp"
        android:inputType="text"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potvrdi"
        android:layout_below="@id/guessEditText"
        android:layout_marginTop="16dp"
        android:onClick="submitGuess"
        android:layout_centerHorizontal="true" />

</RelativeLayout>